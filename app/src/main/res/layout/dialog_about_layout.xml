<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/inner_padding">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="나무"
        android:textColor="#000000"
        android:textSize="50sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="강민서 (경문고 2019년 졸업생)"
        android:textSize="17sp"
        android:textColor="#555555"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="해당 앱은 개발자 졸업으로 인해 개발이 중단되었습니다."
        android:textSize="12sp"
        android:textColor="#DD555555"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_padding"
        android:gravity="center"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="그래도 생각날 때마다 간간히 업데이트하고 있어요 :)"
        android:textSize="10sp"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center"/>

</LinearLayout>